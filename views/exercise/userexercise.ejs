<%- include ("../partials/exerciseHeader") %>
<link rel="stylesheet" href="/stylesheets/userExercise.css"/>

<div class="container">
  <div class="row mt-5">
    <div class=" col-md-8 col-sm-12 mx-auto">
      <div id="add">
      <h4 class="pl-3 pb-4">Add custom exercise </h4>
      <div class="col-1"></div>
      <div class="col-10">
      <form action="/customExercise" method="POST">

          <div class="form-group row">
            <label for="exercise_name" class="col-sm-4 col-form-label">Exercise Name</label>
            <div class="col-sm-8">
              <input type="text" class="form-control"  name="info[exercise_name]" id="exercise_name" required>
            </div>
          </div>

          <div class="form-group row">
            <label for="calories" class="col-sm-4 col-form-label">Calories burned</label>
            <div class="col-sm-8">
              <input type="number" class="form-control" id="calories" name="info[burnedcalories]" placeholder="Kcal"required>
            </div>
          </div>
        
          <div class="form-group row">
            <label for="met" class="col-sm-4 col-form-label">MET</label>
            <div class="col-sm-8">
              <input type="number" class="form-control" name="info[met]" id="met" required step="0.1">
            </div>
          </div>
          
          <div class="form-group row">
            <label for="duration" class="col-sm-4 col-form-label">Duration</label>
            <div class="col-sm-8">
              <input type="number" class="form-control" name="info[duration]"id="duration" placeholder="min" required>
            </div>
          </div>
          <div class="row">
          <div class="col-4 mx-auto mb-4">
           <button type="submit" class="btn"style="background-color: rgba(227, 125, 95);color:white">Add</button>
          </div>
        </div>
      </form>
      </div>
      <div class="col-1"></div>
    </div>
  </div>
  <div class="col-1"></div>
    <div class="col-md-3 col-sm-11 border px-2 custom-execise-list" style="height: 50vh;overflow: auto; background-clip: content-box;background-color: rgba(227, 125, 95,.2);">
    
        <p class="text-center py-3 " style="font-size:1.4rem;color: rgba(227, 125, 95);"> Custom Exercises</p>
       
          <%myexercise.userexercise.forEach(function(exercise){%>
  
          <li class="d-flex justify-content-center align-items-center exercise-name py-1">
              <%=exercise.exercise_name%>
          </li>
      
      <%})%>

    </div>
  </div>
</div>
 
 <%- include ("../partials/footer") %>
 
<script>
   $('form').submit(function(){
    $('button[type=submit]', this).attr('disabled', 'disabled');
});

</script>